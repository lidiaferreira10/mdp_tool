
<%= form_for(@analise_privacidade) do |f| %>

  <% if @analise_privacidade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@analise_privacidade.errors.count, "error") %> prohibited this analise_privacidade from being saved:</h2>

      <ul>
      <% @analise_privacidade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Rede social' %><br>
    <%= f.text_field :rede_social, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'URL da Rede Social' %><br>
    <%= f.text_field :url_rede_social, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Descrição da análise' %><br>
    <%= f.text_area :descricao_analise, :class=>"form-control" %>
  </div>

  <%= f.fields_for :tipo_comunicacoes do |builder| %>
  
  	<fieldset>
  	 	<div class="form-group">
			<%= builder.label :tipo_comunicacao, "Tipo Comunicação" %><br />
			<%= builder.text_field :tipo_comunicacao %><br />
		</div>
	
		<div class="form-group">
			<%= builder.label :observacao, "Observação" %>
			<br />
			<%= builder.text_area :observacao, :rows => 3 %>
		</div>
		
		<div class="form-group">
			<%= builder.check_box :_destroy %>
			<%= builder.label :_destroy, "Remover Tipo de Comunicação" %>
		</div>	
		
		
		
  	</fieldset>
  	
  	
  <% end %>
  

  
  
 <div class="actions">
    <%= f.submit 'Salvar', :class=>"btn btn-primary action"%>
 </div>
  
  
<% end %>
