<div class="row">
	<div class="col-lg-12">
		<p id="notice">
			<%= notice %>
		</p>
	</div>
</div>
<div class="row">
	<div class="col-md-offset-2 col-md-8">

		<div class="panel panel-info">
			<div class="panel-heading text-center"
			<h4 class="panel-i"><strong><%= @analise_privacidade.rede_social %></strong></h4>
			</div>
			<div class="panel-body">

			<p id="notice"><%= notice %></p>
			<%= link_to 'Novo Tipo Comunicação', new_tipo_comunicacao_path(AnalisePrivacidade.where(:id => params[:format].to_i).pluck(:id).first), :class=>
				"btn-lg btn-primary action link" %>

				<p>
					<strong>URL da rede social:</strong>
					<%= @analise_privacidade.url_rede_social %>
				</p>

				<p>
					<strong>Descrição da análise:</strong>
					<%= @analise_privacidade.descricao_analise %>
				</p>

				<br/>

				<ol>
					<% for comunicacao in @analise_privacidade.tipo_comunicacoes %>

					<li>
						<%= comunicacao.tipo_comunicacao %>
					</li>

					<% end %>
				</ol>

				<%= link_to 'Tipos de Comunicação', tipo_comunicacoes_path(@analise_privacidade.id), :class=>"text-right" %>

				<h3>Tipos de Comunicação</h3>

				<table class="table table-responsive">
					<thead>
						<tr>
							<th>Tipo Comunicacao</th>
							<th>Observação</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>

						<% for tipo_comunicacao in @analise_privacidade.tipo_comunicacoes %>
						
							<tr>
								<td><%= tipo_comunicacao.tipo_comunicacao %></td>
								<td><%= tipo_comunicacao.observacao %> <td><%= link_to 'Visualizar', tipo_comunicacao %></td>
								<td><%= link_to 'Editar', edit_tipo_comunicacao_path(tipo_comunicacao) %></td>
								<td><%= link_to 'Excluir', tipo_comunicacao_path(:id => tipo_comunicacao.id, :analise_privacidade_id => tipo_comunicacao.analise_privacidade.id), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
								<td>
									
									<div class="row">
									<div class="col-lg-6" >
										<!--colmeia-->
										<div class="panel">
											<P>SEREI A COLMEIA DA VISU</P>
											<div class="panel-body">
												<div id="container-visualizacao-<%= tipo_comunicacao.analise_privacidade.id %>" class="container-grafico"></div>
											</div>
										</div>
									</div>
								</div>
									
								</td>
							</tr>
							
						<% end %>

					</tbody>
				</table>

				<br />

				<%= link_to 'Voltar', analise_privacidades_path(@tipo_comunicacoes), :class => "btn btn-default" %>

			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-offset-2 col-md-4" >
		<div id="options-form" class="actions">
			<%= link_to 'Voltar',  analise_privacidades_path, :class=>"btn btn-default" %>
		</div>
	</div>
	<div class="col-md-4">
		<div id="options-form" class="actions">
			<%= link_to 'Editar', edit_analise_privacidade_path(@analise_privacidade), :class=>"btn btn-primary pull-right" %>
		</div>
	</div>
</div>

