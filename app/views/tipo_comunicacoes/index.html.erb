<p id="notice"><%= notice %></p>

<h1>Tipos de Comunicação do <%= @tipo_comunicacoes.first.analise_privacidade.rede_social %></h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Tipo Comunicacao</th>
      <th>Observação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_comunicacoes.each do |tipo_comunicacao| %>
      <tr>
        <td><%= tipo_comunicacao.tipo_comunicacao %></td>
        <td><%= tipo_comunicacao.observacao %>
        <td><%= link_to 'Visualizar', tipo_comunicacao %></td>
        <td><%= link_to 'Editar', edit_tipo_comunicacao_path(tipo_comunicacao) %></td>
        <td><%= link_to 'Excluir', tipo_comunicacao, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo de Comunicação', new_tipo_comunicacao_path(:analise_privacidade_id => @tipo_comunicacoes.first.analise_privacidade.id) %>
