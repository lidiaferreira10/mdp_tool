<p id="notice"><%= notice %></p>

<h1>Tipos de Comunicação</h1>

<%= link_to 'Novo Tipo Comunicação', new_tipo_comunicacao_path(AnalisePrivacidade.where(:id => params[:format].to_i).pluck(:id).first), :class=>"btn-lg btn-primary action link" %>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Tipo Comunicacao</th>
      <th>Observação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_comunicacoes.each do |tipo_comunicacao| %>
      <tr>
        <td><%= tipo_comunicacao.tipo_comunicacao %></td>
        <td><%= tipo_comunicacao.observacao %>
        <td><%= link_to 'Visualizar', tipo_comunicacao %></td>
        <td><%= link_to 'Editar', edit_tipo_comunicacao_path(tipo_comunicacao) %></td>
        <td><%= link_to 'Excluir', tipo_comunicacao_path(:id => tipo_comunicacao.id, :analise_privacidade_id => tipo_comunicacao.analise_privacidade.id), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

 <%= link_to 'Voltar', analise_privacidades_path(@tipo_comunicacoes), :class => "btn btn-default" %>  
