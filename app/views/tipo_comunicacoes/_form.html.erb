<div id="form-1">
	<%= form_for(@tipo_comunicacao) do |f| %>
	<% if @tipo_comunicacao.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@tipo_comunicacao.errors.count, "error") %> prohibited this tipo_comunicacao from being saved:</h2>

		<ul>
			<% @tipo_comunicacao.errors.full_messages.each do |message| %>
			<li>
				<%= message %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div class="col-lg-12" >
		<div class="col-lg-7" >
			<!--Titulo-->
			
			<h3>
			<div id="nome_tipo_comunicacao" class="field">
				<%= f.label :tipo_comunicacao, :value=>"Nome da comunicação" %>
				<%= f.text_field :tipo_comunicacao, :class=>"form-control" %>
			</div></h3>
		</div>
		
	</div>

	<!-- <div class="field">
	<%= f.label :analise_privacidade_id %><br>
	<%= f.text_field :analise_privacidade_id, :value => @tipo_comunicacao.analise_privacidade.id %>
	</div>
	-->
</div>

<div class="row">
	<div class="col-lg-7" >
		
		<!--colmeia-->
		<div class="panel">
			<div class="panel-body">
				<div id="comunicacao-1" class="container-grafico"></div>
			</div>
		</div>
		<!--legenda-->
		<div class="panel">
			<div class="panel-body">
				<div id="container-legenda-edit" class="container-grafico"></div>
			</div>
		</div>
	</div>



	<div class="col-lg-5" >
		<div id="forms-colmeia">
				
			<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="false">

				<%= f.fields_for :modelagem_privacidades do |builder| %>

				<div class="panel panel-info">

					<div class="panel-heading" role="tab" id="headingOne">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse" aria-expanded="false" aria-controls="collapse"> 
								<%= Dimensao.where(:id => (builder.index + 1)).pluck(:nome_dimensao).first %>
								<br />
								<%= builder.hidden_field :dimensao_id, :value => (builder.index + 1)  %> 
							</a>
						</h4>
					</div>

					<div id="collapse" class="collapse" role="tabpanel" aria-labelledby="headingOne">
						<div class="row">
							<div class="panel-body">
								<div class="col-lg-6" >
									<div class="input-group">
										<%= builder.label :tipo_comunicacao_id %>
										<%= builder.text_field :tipo_comunicacao_id %>
									</div>
								</div>
								<div class="col-lg-6" >
									<div class="input-group">
										<%= builder.label :controle_privacidade_id %>
										<%= builder.collection_select(:controle_privacidade_id, ControlePrivacidade.all, :id, :controle) %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<% end %>
			</div>

		</div>
	</div>
	<div class="col-lg-5" >
			<div class="field">
				<%= f.label :observacao, :value=>"Observações" %>
				<br>
				<%= f.text_area :observacao, :class=>"form-control", :rows=>"4"  %>
			</div>
		</div>
</div>
<div class="row">
	<div class="col-lg-6" >
		<div id="options-form" class="actions">
			<%= link_to 'Back', tipo_comunicacoes_path, :class=>"btn btn-default" %>
		</div>
	</div>
	<div class="col-lg-6" >
		<div id="options-form" class="actions">
			<%= f.submit 'Criar comunicação', :class=>"btn btn-primary pull-right" %>
		</div>
	</div>
	<% end %>
</div>
